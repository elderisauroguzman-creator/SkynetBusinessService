<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<location path="." inheritInChildApplications="false">
		<system.webServer>

			<!-- Ejecutar la app .NET Core dentro del proceso de IIS -->
			<handlers>
				<add name="aspNetCore"
					 path="*"
					 verb="*"
					 modules="AspNetCoreModuleV2"
					 resourceType="Unspecified" />
			</handlers>

			<aspNetCore processPath="dotnet"
						arguments=".\BusinessService.dll"
						stdoutLogEnabled="false"
						hostingModel="inprocess">
				<environmentVariables>
					<!-- Variables de entorno personalizadas -->
					<environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Development" />
					<!--<environmentVariable name="ConnectionStrings__DefaultConnection" value="Server=.;Database=AuthDB;Trusted_Connection=True;" />
					<environmentVariable name="Jwt__Key" value="SuperClaveDeSeguridad123" />
					<environmentVariable name="Jwt__Issuer" value="AuthService" />
					<environmentVariable name="Jwt__Audience" value="AuthClients" />-->
				</environmentVariables>
			</aspNetCore>

		</system.webServer>
	</location>
</configuration>